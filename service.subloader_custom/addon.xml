<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<addon id="service.subloader_custom"
    name="service.subloader_custom" version="0.1.5" provider-name="Cy4Root">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
  </requires>
  <extension point="xbmc.service" library="system.py" start="login"></extension>  
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Automatic subtitles without logging in or opensubtitle addon @Cy4Root</summary>
    <description lang="en">Default Dutch subtitle</description>
    <platform>all</platform>
    <language>en</language>
    <license>GPL</license>
    <website></website>
	<assets>
		<icon>icon.jpg</icon>
		<fanart>fanart.jpg</fanart>
		<screenshot></screenshot>
		<screenshot></screenshot>
	</assets>
    <source></source>
    <forum></forum>
    <email></email>
	<news></news>
  </extension>
</addon>
